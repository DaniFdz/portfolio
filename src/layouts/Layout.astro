---
import Header from "@/components/Header.astro";
import '@fontsource-variable/onest';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="dark" lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="author" content="Daniel FernÃ¡ndez" />
		<meta name="title" content={title} />
		<meta name="description" content={title} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative text-black dark:text-white">
		<div class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-neutral-100 dark:bg-neutral-950 
			[background:radial-gradient(125%_125%_at_50%_10%,#fff_40%,#63e_100%)]
			dark:[background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]">
		</div>
		<main>
			<Header />
			<slot />
		</main>
	</body>
</html>
<style is:global>
	:root {
		color-scheme: dark light;
	}
	*{
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	html {
		font-family: 'Onest Variable', system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	body{
		color: rgba(17,17,17,0.9);
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		overscroll-behavior: none;
	}
	@media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
	@media (prefers-color-scheme: dark) {
    body {
			color: #fff;
    }
  }
</style>
