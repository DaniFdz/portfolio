---
interface Props {
	date: string;
	title: string;
}

const { date, title } = Astro.props;
---

<li class="mb-10 ms-4">
	<div
		class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5
		border border-gray-700 bg-gray-500 shadow-sm shadow-gray-200/50
		dark:border-gray-900 dark:bg-white dark:shadow-gray-900/50"
	>
	</div>
	<time
		class="mb-1 text-sm font-normal leading-none text-gray-700 dark:text-gray-200"
	>
		{date}
	</time>
	<h3 class="text-lg font-semibold text-gray-900 dark:text-white">
		{title}
	</h3>
	<slot />
	<slot name="skills" />
</li>
