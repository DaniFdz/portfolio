---
import SocialPill from "@/components/SocialPill.astro";
import ExperienceItem from "@/components/ExperienceItem.astro";
import Skill from "@/components/Skill.astro";
import CodeIcon from "@/components/icons/Code.astro";
import BuildingIcon from "@/components/icons/Building.astro";
import BriefcaseIcon from "@/components/icons/Briefcase.astro";
import GithubIcon from "@/components/icons/Github.astro";
import TailwindIcon from "@/components/icons/Tailwind.astro";
import DjangoIcon from "@/components/icons/Django.astro";
import DockerIcon from "@/components/icons/Docker.astro";
import MysqlIcon from "@/components/icons/Mysql.astro";
import NodejsIcon from "@/components/icons/Nodejs.astro";

const TAGS = {
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
		icon: TailwindIcon,
  },
	DJANGO: {
		name: "Django",
		class: "bg-[#124332] text-white",
    icon: DjangoIcon,
	},
	DOCKER: {
		name: "Docker",
		class: "bg-[#05469d] text-white",
		icon: DockerIcon,
	},
	MYSQL: {
		name: "MySQL",
		class: "bg-[#60859f] text-white",
		icon: MysqlIcon,
	},
	NODEJS: {
		name: "Node.js",
		class: "bg-[#026e00] text-white",
		icon: NodejsIcon,
	},
}
const PROJECTS = [
  {
    title: "Goon Website",
    description:
      "Website for designer Laurana Corrales and her brand Goon. Developed with Django to allow her to add new collections whenever she wants. One of the motivations I had for the realization of this project was the desire to learn how to deploy a project and manage it in the best possible way so that it is scalable and secure.",
    link: "https://goon-web.es/",
    github: "https://github.com/DaniFdz/goon",
    image: "/images/17125dd9-9ca1-4048-bd1f-c39694b01817.webp",
		tags: [TAGS.DJANGO, TAGS.TAILWIND, TAGS.DOCKER, TAGS.MYSQL],
	},
	{
		title: "Discord GPT",
		description: "Discord bot to help users have more natural and efficient conversations on the Discord platform with ChatGPT",
		github: "https://github.com/DaniFdz/discord_gpt",
		tags: [TAGS.NODEJS],
	},
]
---

<h2
  class="text-3xl font-semibold mb-4 flex gap-x-3 items-center text-black/80 dark:text-white/90"
>
  <BuildingIcon class="size-7" />
  Experience
</h2>

<h3
  class="text-2xl font-semibold flex gap-x-3 items-center text-black/80 dark:text-white/90 text-gray-800 dark:text-gray-300"
>
  <CodeIcon class="size-7" />
  Projects
</h3>

{
	PROJECTS.map(({ image, title, description, tags, link, github }) => (
		<article>
				<h4 class="mt-2 text-lg font-semibold text-yellow-400 dark:text-yellow-500">
					{ title }
				</h4>
        <p class="text-lg mb-4 text-pretty">{ description }</p>
        <ul class="flex flex-wrap gap-2 flex-row mb-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${ tag.class } py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                { tag.name }
              </span>
            </li>
          ))}
        </ul>
				{image && (
					<img
						loading="lazy"
						class="rounded shadow-2xl shadow-white/10 aspect-video"
						src={ image }
						alt={`Captura de pantalla del proyecto ${ image }`}
					/>
				)}
        <footer class="flex gap-x-4 items-end justify-start my-4">
          {github && (
            <SocialPill href={github}>
              <GithubIcon class="size-6" />
              Source Code
            </SocialPill>
          )}
					{link && (
						<SocialPill href={link}>
							<svg
								width="24"
								height="24"
								viewBox="0 0 24 24"
								stroke-width="1.5"
								stroke="currentColor"
								fill="none"
								stroke-linecap="round"
								stroke-linejoin="round"
							>
								<>
									<path stroke="none" d="M0 0h24v24H0z" fill="none" />
									<path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
									<path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
									<path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
									<path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
									<path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
									<path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
									<path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
									<path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
									<path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
								</>
							</svg>
							Visit website
						</SocialPill>
					)}
        </footer>
      </article>
    ))
  }

<div
	class="mt-8 flex flex-col items-left px-4 py-3 rounded-lg bg-white dark:bg-black bg-[radial-gradient(#e5e7eb_1px,#f3f6ff_1px)] dark:bg-[radial-gradient(#ffffff20_1px,#00091d_1px)] bg-[size:30px_30px]"
>
	<div
		class="absolute inset-0 -z-10 h-full w-full bg-white bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px]"
	>
	</div>
	<h2 class="text-2xl flex flex-row gap-1.5 items-center text-gray-800 dark:text-gray-200">
		<BriefcaseIcon /> Work Experience
	</h2>
	<ol class="relative border-s border-gray-700 dark:border-gray-400 mt-6">
		<ExperienceItem
			date="2021-2023"
			title="Software Technician at UC3M Social Robotics Lab"
		>
			<p
				class="mb-4 text-base font-normal text-gray-700 dark:text-gray-400"
			>
				Developed a full-stack web application with Django, including
				the creation and management of MySQL and Nextcloud databases,
				and the implementation of security measures in an Ubuntu-based
				environment, virtualized through Docker. Also involved in tasks
				using ROS with devices like Raspberry Pi and Arduino.
			</p>
			<span
				slot="skills"
				class="flex flex-row flex-wrap gap-x-3 gap-y-2 mt-1"
			>
				<Skill category="Programming">Python</Skill>
				<Skill category="Programming">Django</Skill>
				<Skill category="Programming">Bash</Skill>
				<Skill category="Programming">HTML</Skill>
				<Skill category="Programming">CSS</Skill>
				<Skill category="Programming">JavaScript</Skill>
				<Skill category="Programming">Arduino</Skill>
				<Skill category="Other">UI/UX</Skill>
				<Skill category="Other">Git</Skill>
				<Skill category="Other">Docker</Skill>
				<Skill category="Other">MySQL</Skill>
				<Skill category="Other">Nextcloud</Skill>
				<Skill category="Other">ROS</Skill>
				<Skill category="Soft Skills">Team Work</Skill>
				<Skill category="Soft Skills">Project Management</Skill>
				<Skill category="Soft Skills">Critical Thinking</Skill>
			</span>
		</ExperienceItem>
	</ol>
</div>
